.page-hero
  justify-content: center
  align-items: center

  display: flex
  width: 100%
  height: 100vh
  background: url('/img/banners/cell-spectroscopy.png') no-repeat center
  background-size: cover
  
.page-hero__content
  width: 100%
  max-width: $screen-lg-min
  padding: 0 ($gutter-width / 2)

  color: $white
  text-shadow: 1px 1px 2px $black
  
  > h1
    font-size: 84px
  
  > h2
    font-size: 44px
  
  > button
    height: 34px
    margin-top: ($spacing * 2)

    color: $accent-color
    font-size: 28px
    line-height: 30px
    text-shadow: 1px 1px 2px $black

    &:after
      float: right

      display: inline-block
      height: 100%
      width: 48px
      background: url('/img/icons/long-arrow-right-accent.svg') no-repeat center
      background-size: contain

      cursor: pointer

      content: ""
