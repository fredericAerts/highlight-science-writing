.page-section
  position: relative
  justify-content: center
  align-items: center
  z-index: 0

  display: flex
  width: 100%
  height: 100vh
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &--research
    background-image: url('/img/banners/woman-at-work-in-laboratory-xs.png')

    @media screen and (min-width: $screen-sm-min)
      background-image: url('/img/banners/woman-at-work-in-laboratory.png')
    

  &--outreach
    background-image: url('/img/banners/models-of-brains-xs.png')

    @media screen and (min-width: $screen-sm-min)
      background-image: url('/img/banners/models-of-brains.png')

  &--science
    background-image: url('/img/banners/lab-equipment-xs.png')
    
    @media screen and (min-width: $screen-sm-min)
      background-image: url('/img/banners/lab-equipment.png')

  &:before
    position: absolute
    top: 0
    left: 0
    z-index: -1

    width: 100%
    height: 100%
    background: rgba($black, .5)

    content: ""
  
.page-section__content
  transform: translateY(50%)

  width: 100%
  max-width: $screen-lg-min
  padding: 0 ($gutter-width / 2)

  color: $white
  
  > h2
    font-size: 34px
    line-height: 38px
    font-weight: $font-weight-bold

    @media screen and (min-width: $screen-xxs-min)
      font-size: 42px
      line-height: 46px

    @media screen and (min-width: $screen-xs-min)
      font-size: 58px
      line-height: 62px

    @media screen and (min-width: $screen-md-min)
      font-size: 68px
  
  > h3
    font-size: 22px
    font-family: $font-family-secondary

    margin-top: ($spacing * 2)

    @media screen and (min-width: $screen-xs-min)
      font-size: 28px
    
    @media screen and (min-width: $screen-sm-min)
      font-size: 34px

    @media screen and (min-width: $screen-md-min)
      font-size: 38px