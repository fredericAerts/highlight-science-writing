.page-footer
  background: $grey-xdark

  color: $white

.page-footer__content
  flex-wrap: wrap

  display: flex
  width: 100%
  max-width: $screen-lg-min
  margin: 0 auto
  padding: 0 ($gutter-width / 2)

.page-footer__content__col
  width: 100%
  padding: ($gutter-width * 2) 0

  @media screen and (min-width: $screen-sm-min)
    width: 50%
  
  &:first-child
    width: 100%
    padding-bottom: 0  
  
  &:nth-child(2)
    width: 100%
    padding-bottom: 0  

  &:nth-child(3)
    
    @media screen and (max-width: $screen-xs-max)
      padding-bottom: 0  
  
  &:nth-child(4)

    @media screen and (max-width: $screen-xs-max)
      padding-top: $gutter-width 

.page-footer__content__col__contact,
.page-footer__content__col__social-media
  position: relative
  top: $spacing * 2

  padding-top: $spacing * 4

  font-family: $font-family-secondary

  &:before
    position: absolute
    top: 0
    left: 0

    width: 24px
    height: 3px
    background: $white

    content: ""
  
  > a
    color: $white
    margin-bottom: ($spacing)

    transition: color .3s ease

    &:hover
      color: $accent-color

.page-footer__content__col__logo

  > img
    width: 100px

.page-footer__content__col__slogan

  > span
    display: block
    width: 100%

    font-size: 24px
    line-height: 28px
    font-weight: $font-weight-bold

    @media screen and (min-width: $screen-xxs-min)
      font-size: 28px
      line-height: 32px
    
    @media screen and (min-width: $screen-xs-min)
      font-size: 34px
      line-height: 38px

.page-footer__content__col__contact__tel,
.page-footer__content__col__contact__mail,
.page-footer__content__col__social-media__twitter
  display: inline-block

  &:before
    position: relative
    top: 2px
    float: left

    display: block
    width: 18px
    height: 18px
    margin-right: ($spacing * 1.5)
    background-repeat: no-repeat
    background-position: center
    background-size: contain

    content: ""

.page-footer__content__col__contact__tel:before
  background-image: url('/img/icons/phone-white.svg')

.page-footer__content__col__contact__mail:before
  background-image: url('/img/icons/envelope-white.svg')

.page-footer__content__col__social-media__twitter:before
  background-image: url('/img/icons/twitter-white.svg')

.page-footer__content__footer
  width: 100%
  
  font-family: $font-family-secondary
  color: $grey-xlight
  font-size: 13px
  line-height: 34px

  a
    color: $grey-xlight
    text-decoration: underline

  > span:not(:first-child)
    position: relative

    display: none    
    margin-left: ($spacing / 2)
    padding-left: ($spacing * 1.3)

    @media screen and (min-width: $screen-xs-min) 
      display: inline-block

    &:before
      position: absolute
      left: 0
      top: 50%
      transform: translateY(-40%)

      width: 1px
      height: 10px
      background: $grey-xlight

      content: ""

      content: ""